<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0037">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/digit11"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:id="@+id/textView89"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/digit21"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/digit22"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:id="@+id/textView10"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true"
                    android:textIsSelectable="false" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/digit31"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/digit32"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="70dp"
                    android:textColor="#000000"
                    android:linksClickable="true" />
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stolen_title"
            android:id="@+id/textView3"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="33dp"
            android:layout_marginTop="30dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/stolen_description"
            android:id="@+id/textView4"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="40dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/multi_shopping_cart"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/tiny_circle"
            android:layout_margin="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:maxHeight="10dp"
            android:maxWidth="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/tiny_circle"
            android:layout_margin="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:maxHeight="10dp"
            android:maxWidth="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/tiny_circle"
            android:layout_margin="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:maxHeight="10dp"
            android:maxWidth="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/tiny_circle"
            android:layout_margin="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:maxHeight="10dp"
            android:maxWidth="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/tiny_circle"
            android:layout_margin="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:maxHeight="10dp"
            android:maxWidth="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:src="@drawable/tiny_circle"
            android:layout_margin="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:maxHeight="10dp"
            android:maxWidth="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/shopping_cart_icon"
            android:layout_weight="1.1"
            android:onClick="navigateToChoose" />

    </LinearLayout>
</LinearLayout>